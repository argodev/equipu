div.header(ng-controller='NavbarCtrl')
  img.img-responsive(src='/assets/images/equipulogo.gif')
  div.titleDescription.hidden-xs  Resources for parents, churches, and others ministering to children
  img.img-responsive.hidden-xs(src='/assets/images/booksimage.jpg')
  div.navbar.navbar-default(role='navigation')
    div.container2
      div.navbar-header
        button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

      div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
        ul.nav.navbar-nav
          li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
            a(ng-href='{{item.link}}') {{item.title}}
